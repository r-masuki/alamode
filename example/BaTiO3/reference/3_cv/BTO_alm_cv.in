&general
  PREFIX = cBTO222
  MODE = optimize
  NAT = 40; NKD = 3
  KD = Ba Ti O
/


&interaction
  NORDER = 3  # 1: harmonic, 2: cubic, ..
  NBODY = 2 3 3
/

&cutoff 
  *-* None 15.0 9.0
/

&optimize
  LMODEL = adaptive-lasso
  NDATA = 80
  DFSET = DFSET_AIMD_random
  FC2XML = ../cBTO222_harmonic.xml

  CV = 4 # switch off CV
  L1_RATIO = 1.0 # LASSO
  CV_MINALPHA = 1.0e-12
  CV_MAXALPHA = 0.0001
  CV_NALPHA = 100

  STANDARDIZE = 1
  CONV_TOL = 1.0e-8

  MIRROR_IMAGE_CONV = 1
/

&cell
  7.53159676409 # factor in Bohr unit
  2.0 0.0 0.0 # a1
  0.0 2.0 0.0 # a2
  0.0 0.0 2.0 # a3
/



