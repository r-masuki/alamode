&general
  PREFIX = cBTO222
  MODE = optimize
  NAT = 40; NKD = 3
  KD = Ba Ti O
/


&interaction
  NORDER = 3  # 1: harmonic, 2: cubic, ..
  NBODY = 2 3 3
/

&cutoff 
  *-* None 15.0 9.0
/

&optimize
  LMODEL = elastic-net
  NDATA = 80
  DFSET = ../2_vasp_dfset/DFSET_AIMD_random
  FC2XML = ../cBTO222_harmonic.xml

  CV = 4 # split the DFSET to 4 sets and perform CV
  L1_RATIO = 1.0 # LASSO
  CV_MINALPHA = 1.0e-8
  CV_MAXALPHA = 0.01
  CV_NALPHA = 30

  STANDARDIZE = 1
  CONV_TOL = 1.0e-8

  STOP_CRITERION = 100
/

&cell
  7.53159676409 # factor in Bohr unit
  2.0 0.0 0.0 # a1
  0.0 2.0 0.0 # a2
  0.0 0.0 2.0 # a3
/



